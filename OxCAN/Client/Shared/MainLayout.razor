@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>


<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">Oxford Community Action Network</MudText>
        <MudSpacer />
        <MudToggleIconButton @bind-Toggled="@_isDarkMode" Icon="@Icons.TwoTone.LightMode" Color="Color.Warning" 
                    ToggledIcon="@Icons.TwoTone.DarkMode" ToggledColor="@Color.Primary" Class="ma-4" T="bool"/>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>

</MudLayout>
@code {
    bool _drawerOpen = true;
    private MudTheme _theme = new()
    {
        Palette = new Palette()
        {

        },
        PaletteDark = new PaletteDark()
        {

        }
    };
    
    private bool _isDarkMode;
    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}